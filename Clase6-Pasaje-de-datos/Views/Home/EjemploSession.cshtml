            <div>
                <strong>Session["Mensaje2"]: </strong>@Session["Mensaje2"]
            </div>
            <div>
                <strong>Session["Mensaje3"]: </strong>@Session["Mensaje3"]
            </div>

            <div>
                <strong>Ingrese Mensaje 3: </strong><input type="text" name="mensaje3" />
            </div>

            <input type="submit" value="Guardar" />
        </div>
    </form>
</body>
</html>
