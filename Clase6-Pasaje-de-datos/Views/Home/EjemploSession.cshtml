
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EjemploSession</title>
</head>
<body>
    <form action="/Home/EjemploSession" method="post">
        <div>
            <div>
                <strong>Session.Add("Mensaje", "Hola clase Session"): </strong>@Session["Mensaje"]
